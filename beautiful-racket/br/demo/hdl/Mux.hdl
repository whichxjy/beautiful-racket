/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    // Put your code here:
    Not(in=sel, out=sel-opposite);
    And(a=a, b=sel-opposite, out=maybe-a);
    Or(a=maybe-a, b=b, out=out);
}
